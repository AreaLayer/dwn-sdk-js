{
  "labels": {
    "message": { "schema": "messageSchema" },
    "reply": { "schema": "replySchema" },
    "image": { "schema": "imageSchema" },
    "caption": { "schema": "captionSchema" }
  },
  "records": {
    "message": {
      "allow": {
        "anyone": { "to": ["write"] }
      },
      "records": {
        "reply": {
          "allow": {
            "recipient": {
              "of": "message",
              "to": ["write"]
            }
          }
        }
      }
    },
    "image": {
      "allow": {
        "anyone": {
          "to": ["read", "write"]
        }
      },
      "records": {
        "caption": {
          "allow": {
            "anyone": {
              "to": ["read"]
            },
            "author": {
              "of": "image",
              "to": ["write"]
            }
          }
        },
        "reply": {
          "allow": {
            "author": {
              "of": "image",
              "to": ["read"]
            },
            "recipient": {
              "of": "image",
              "to": ["write"]
            }
          }
        }
      }
    }
  }
}